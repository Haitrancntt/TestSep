<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:id="@+id/imagebutton_createaccount"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/ic_newaccount"
        android:text="New Account"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="New Account"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorText"
        android:layout_below="@+id/imagebutton_createaccount"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imagebutton_resetpass"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/imagebutton_changepass"
        android:layout_alignStart="@+id/imagebutton_changepass"
        android:layout_marginBottom="90dp"
        android:background="@drawable/ic_resetpass"
        android:text="Reset Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagebutton_resetpass"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="-10dp"
        android:text="Reset Password"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imagebutton_changepass"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imagebutton_createaccount"
        android:layout_marginBottom="83dp"
        android:background="@drawable/ic_changepass"
        android:text="Change Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_marginLeft="140dp"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

</RelativeLayout>
