<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:id="@+id/imagebutton_createaccount"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_newaccount"
        android:text="New Account" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagebutton_createaccount"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="0dp"
        android:text="New Account"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imagebutton_resetpass"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/imagebutton_createaccount"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_resetpass"
        android:text="Reset Password" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagebutton_resetpass"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/imagebutton_resetpass"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="-10dp"
        android:text="Reset Password"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imagebutton_changepass"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_changepass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Change Password"
        android:id="@+id/textView44"
        android:layout_below="@+id/imagebutton_changepass"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Control Account"
        android:id="@+id/textView45"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText"
        android:textSize="40dp"
        android:textStyle="bold" />


</RelativeLayout>
