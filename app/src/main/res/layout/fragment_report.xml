<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/chartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/halfpie"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignTop="@id/chartDate"
            android:layout_below="@id/chartDate"
            android:layout_marginTop="80dp" />

        <TextView
            android:id="@+id/txtOverall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/halfpie"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="Tag Overview"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/fullpie"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignTop="@id/txtOverall" />

    </RelativeLayout>


</ScrollView>
